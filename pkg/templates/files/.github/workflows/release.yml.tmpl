name: Release

on:
  push:
    tags:
      - 'v*'

env:
  GO_VERSION: "{{.GoVersion}}"

jobs:
  release:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
    - uses: actions/checkout@v4
      with:
        fetch-depth: 0
    
    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: ${{`{{ env.GO_VERSION }}`}}
    
    - name: Configure git for private modules
      run: |
        git config --global url."https://${{`{{ secrets.GROVE_PAT }}`}}@github.com/".insteadOf "https://github.com/"
        go env -w GOPRIVATE=github.com/mattsolo1/*
        go env -w GOPROXY=direct
    
    - name: Run tests
      run: make test
    
    - name: Build binaries
      run: |
        VERSION=${{`${GITHUB_REF_NAME#v}`}}
        make build-all VERSION=$VERSION
    
    - name: Create release
      uses: softprops/action-gh-release@v2
      with:
        files: |
          dist/{{.BinaryAlias}}-darwin-amd64
          dist/{{.BinaryAlias}}-darwin-arm64
          dist/{{.BinaryAlias}}-linux-amd64
          dist/{{.BinaryAlias}}-linux-arm64
        generate_release_notes: true